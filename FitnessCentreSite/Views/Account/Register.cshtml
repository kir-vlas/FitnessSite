@model FitnessCentreSite.Models.RegisterViewModel
@{
    ViewBag.Title = "Вход";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")" type="image/x-icon">
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/LoginForm/style.css")">
</head>
<body>
    <div class="form">

        <ul class="tab-group">
            <li class="tab">@Html.ActionLink("Вход","Login","Account")</li>
            <li class="tab active"><a>Регистрация</a></li>
        </ul>

        <div class="tab-content">
            <div id="signup" style="display:block;">
                <h1>Регистрация</h1>

                @using (Html.BeginForm("Register", "Account"))
                {

                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                Имя<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Фамилия<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Email Адрес<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => Model.UserName)
                    </div>

                    <div class="field-wrap">
                        <label>
                            Введите пароль<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => Model.Password)
                    </div>

                    <button type="submit" class="button button-block">Добро пожаловать</button>

                }

            </div>


        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>


</body>
</html>
