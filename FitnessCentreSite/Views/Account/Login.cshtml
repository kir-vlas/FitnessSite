@model FitnessCentreSite.Models.LoginViewModel
@{
    ViewBag.Title = "Вход";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")" type="image/x-icon">
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/LoginForm/style.css")">
</head>
<body>
    <div class="form">

        <ul class="tab-group">
            <li class="tab active"><a href="#signup">Регистрация</a></li>
            <li class="tab"><a href="#login">Вход</a></li>
        </ul>

        <div class="tab-content">
            <div id="signup">
                <h1>Регистрация</h1>

                <form action="/" method="post">

                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                Имя<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>

                        <div class="field-wrap">
                            <label>
                                Фамилия<span class="req">*</span>
                            </label>
                            <input type="text" required autocomplete="off" />
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Email Адрес<span class="req">*</span>
                        </label>
                        <input type="email" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Введите пароль<span class="req">*</span>
                        </label>
                        <input type="password" required autocomplete="off" />
                    </div>

                    <button type="submit" class="button button-block">Добро пожаловать</button>

                </form>

            </div>

            <div id="login">
                <h1>С Возвращением!</h1>

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="field-wrap">
                        <label>
                            Email Адрес<span class="req">*</span>
                        </label>
                        @Html.EditorFor(m => m.UserName)
                    </div>

                    <div class="field-wrap">
                        <label>
                            Пароль<span class="req">*</span>
                        </label>
                        @Html.EditorFor(m => m.Password)
                    </div>

                    <p class="forgot"><a href="#"></a></p>

                    <button class="button button-block">Поехали</button>

                }

            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src="@Url.Content("~/Scripts/LoginForm/index.js")"></script>
</body>
</html>
